      <div id="error_explanation">2
        <h2><%= pluralize(answer.errors.count, "answer") %>prohibited this answer from being saved:</h2>
        <ul>
        <% answer.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
