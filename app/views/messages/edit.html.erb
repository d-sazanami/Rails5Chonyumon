<h1>Messages#edit</h1>
<p><%= @msg %></p>
<% if @message.errors.any? %>
<ul>
    <% @message.error.full_messges.each do |err| %>
        <li><%= err %></li>
    <% end %>
</ul>
<% end %>
<table>
    <%= form_for(@message, url:{controller:'message', action:'update', id:@message.id}) do |form| %>
    <tr>
        <th>Person ID</th>
        <td><%= form.file_field :person_id %></td>
    </tr>
    <tr>
        <th>Title</th>
        <td><%= form.text_field :title %></td>
    </tr>
    <tr>
        <th>Message</th>
        <td><%= form.text_area :mesage, {cols:30, rows:3} %></td>
    </tr>
    <tr>
        <tr></tr>
        <td><%= form.submit "送信" %></td>
    </tr>
</table>
